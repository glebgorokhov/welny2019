mixin header()
  +b.header&attributes(attributes)
    .container
      +e.left
        +e.A.logo(href="#")
          +icon('logo')

        +e.P.logo-text Кабинет

      +button()(href="#").__button Сделать заказ

      +e.right
        +e.A.link(href="#") Выйти

        +e.burger-button
          span

mixin ui-kit-header()
  +ui-section
    +ui-section-head
      +ui-title Шапка
      +ui-path
        p Компонент: components/header/header

    +ui-section-content()
      +header

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
