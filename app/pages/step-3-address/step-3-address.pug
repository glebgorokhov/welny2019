extends ../../layouts/default

block head
  - var pageTitle = projectName + ' | Выбор адреса'

block content
  +steps(3)

  .container
    +section
      +section-header
        +section-title Адрес
        +section-subtitle На данный момент сервис предоставляется в г. Москва в пределах МКАД

      +section-content
        +grid
          +col({xl: 12})
            +inputbox
              +label Улица, дом
              +inputbox._suggestions
                +input(type="text" name="address")
                +e.UL.suggestions
                  li Москва
                  li Санкт-Петербург
                  li Самара
                  li Тольятти
                  li Санкт-Петербург
                  li Самара
                  li Тольятти

          +col({xl: 6, lg: 12})
            +inputbox
              +label Квартира
              +input(type="text" name="room")

          +col({xl: 6, lg: 12})
            +inputbox
              +label Этаж
              +input(type="text" name="floor")

          +col({xl: 6, lg: 12})
            +inputbox
              +label Подъезд
              +input(type="text" name="porch")

          +col({xl: 6, lg: 12})
            +inputbox
              +label Код домофона
              +input(type="text" name="code")

      +section-buttons
        +button()(href="#")._mid.__button ПРОДОЛЖИТЬ
        +e.A.arrow-link(href="#")
          +icon('arrow_left')
          span Назад
