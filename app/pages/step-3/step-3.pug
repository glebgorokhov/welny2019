extends ../../layouts/default

block head
  - var pageTitle = projectName + ' | Выбор адреса'

block content
  +steps(3)

  .container
    +section
      +section-header
        +section-title Укажите адрес
        +section-subtitle Выберите из сохраненных адресов или укажите новый.

      +section-content
        +addresses

      +section-buttons
        +button()(href="#")._mid.__button ПРОДОЛЖИТЬ
        +e.A.arrow-link(href="#")
          +icon('arrow_left')
          span Назад
