extends ../../layouts/default
include ui-kit-mixins

block head
  - var pageTitle = projectName + ' | UI-кит'

block content
  script
    | $(window).on('load', function () {
    |   $('.ui-kit__section').each(function (i) {
    |     var id = 'section' + i;
    |     var name = $(this).find('.ui-kit__section-head h2').text();
    |     var li = $('<li></li>');
    |     var a = $('<a></a>');
    |
    |     a.attr('href', '#'+id).text(name).addClass('js-anchor');
    |     li.append(a);
    |
    |     $('.ui-kit__navigation__list').append(li);
    |     $(this).attr('id', id);
    |   });
    | });

  +b.ui-kit
    +e.navigation
      +e.UL.navigation__list

    //- Шапка ui-кита
    +e.SECTION.head&attributes(attributes)
      .container
        +e.IMG.logo(src="assets/images/logo.svg", alt="Логотип проекта")
        +e.name Название проекта

    //- Сетка
    +ui-section._grid
      +ui-section-head
        +ui-title Сетка
        +ui-description
          p Колонок: 12 ($grid-cols)
          p Переменные: styles/helpers/_variables.scss
          p Блок: blocks/grid/

          +ui-special
            p Возможные варианты использования
            p
              pre +col(12) аналогично +col({ xl: 12 })
            p
              pre +col({ xl: 8, lg: 6: md: 5, sm: 7, xs: 12 })
            p Промежуточные брейкпоинты указывать не обязательно
            p При следующей записи - блок будет занимать 6 колонок на всех разрешениях, а на самом маленьком (xs) — 12
            p
              pre +col({ xl: 6, xs: 12 })

      +ui-section-content()
        +grid
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(1)
          +col(4)
          +col(4)
          +col(4)
          +col(6)
          +col(6)

    //- Шрифты
    +ui-section
      +ui-section-head
        +ui-title Шрифты
        +ui-path
          p Переменные находятся в файле styles/helpers/_variables.scss
          p Шрифты подключены в styles/helpers/_fonts.scss
        +ui-description
          p Основной шрифт: Arial ($font-main), font-weight: 400, 600
          p Дополнительный шрифт: Times New Roman ($font-second), font-weight: 400, 600

    //- Цвета
    +ui-section
      +ui-section-head
        +ui-title Цвета сайта
        +ui-path Переменные находятся в файле styles/helpers/_variables.scss
      +ui-section-content()
        +ui-elements-list()
          - var n = 0;
          while n < 30
            +ui-color._color
            - n++

    //- Градиенты
    +ui-section
      +ui-section-head
          +ui-title Градиенты
          +ui-path Миксины градиентов находятся в файле styles/helpers/_gradients.scss
      +ui-section-content()
        +ui-elements-list()
          - var n = 0;
          while n < 20
            +ui-color._gradient
            - n++

    //- Хлебные крошки
    +ui-kit-breadcrumbs

    //- Блок button
    +ui-kit-button

    //- Блок form
    +ui-kit-form

    //- Блок content-zone
    +ui-kit-content-zone

    //- Компонент header
    +ui-kit-header

    //- Компонент footer
    +ui-kit-footer

    //- Компонент burger
    +ui-kit-burger

    //- Компонент steps
    +ui-kit-steps

    //- Компонент section
    +ui-kit-section

    //- Компонент advantages
    +ui-kit-advantages

    //- Компонент parameters
    +ui-kit-parameters

    //- Компонент time
    +ui-kit-time

    //- Компонент tabs
    +ui-kit-tabs
  

    //- Компонент slider
    +ui-kit-slider
  

    //- Компонент massage-card
    +ui-kit-massage-card
  

    //- Компонент details
    +ui-kit-details
  

    //- Компонент addresses
    +ui-kit-addresses
  

    //- Компонент bill
    +ui-kit-bill
  

    //- Компонент subscriptions
    +ui-kit-subscriptions
  

    //- Компонент add-review
    +ui-kit-add-review
  

    //- Компонент rating
    +ui-kit-rating
  

    //- Компонент popup
    +ui-kit-popup
  